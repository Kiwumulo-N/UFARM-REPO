      thead.thead-light
        tr
            th Product Name
            th Ward Name
            th Uploads Date
            th Unit price in Ugx
            th Quantity
            th Payment Mode
            th Delivery Mode
            th Produce Type
            th Directions
            th Products Availability
            th Products Image
            th UserID No
            th
