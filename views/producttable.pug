      if users.length
          each user in users
            tr
              td #{user.productname}
              td #{user.wardname}
              td #{user.uploadsdate} 
              td #{user.unitprice}
              td #{user.quantity}
              td #{user.paymentmode}
              td #{user.deliverymode}
