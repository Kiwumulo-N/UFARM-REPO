doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css')
  script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js' )
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js' )
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js' )
  title Document
.container
  form(method='POST' action='/fo')
    h4
      span(style='color: chartreuse;') FARMER ONE REGISTRATION FORM
    .form-row
      .form-group.col-md-6
      label(for='inputEmail4') Name:
      input#inputEmail4.form-control(type='text' name='name')
      .form-group.col-md-6
        label(for='ward') Ward:
        input#inputPassword4.form-control(type='text' name='ward')
    .form-row
      .form-group.col-md-6
        label(for='ward duration') Period of stay in the ward:
        input#inputEmail4.form-control(type='text' name='wardduration')
      .form-group.col-md-6
        label(for='nin') NIN:
        input#inputPassword4.form-control(type='text' name='NIN')
    .form-row
      .form-group.col-md-6
        label(for='inputEmail4')  Birth date
        input#inputEmail4.form-control(type='date' name='birthdate')
      .form-group.col-md-6
        label(for='inputPassword4') Registration date
        input#inputPassword4.form-control(type='date' name='registrationdate')
    .form-row
      .form-group.col-md-6
        label(for='inputAddress')  Home Address 
        input#inputAddress.form-control(type='text' name='homeaddress')
      .form-group.col-md-6
        label(for='Contact') Contact
        input#inputAddress2.form-control(type='text' name='contact')
      .form-row
        .form-group.col-md-6
          label(for='inputState') Residence type
          select#inputState.form-control(name='country')
            option(selected='') Choose your Residence type 
            option By birth
            option By descent
            option By immigration
        .form-group.col-md-6
          label(for='inputState') Activities
          select#inputState.form-control(name='activities')
            option(selected='') Choose Activities 
            option Registers urban farmers
            option Inspects the produce and agricultural activities
            option Approves farmers produce to be uploaded
            option Sees all bookings and orders
        .form-row
          .form-group.col-md-6
            lable Gender
            .form-inline
              label
              input(type='radio' name='gender' value='male' checked='' )
              | Male
              label
              input(type='radio' name='gender' value='female')
              | Female
            .error(name='genderErr')
            .form-group.col-md-6
              button.btn.btn-primary(type='submit') Register
